<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorPrimaryDark">@color/PrimaryDarkColor</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/PrimaryColor</item>
        <item name="colorControlHighlight">#c5c5c5</item>
    </style>
    <style name="TransparentStatusBarTheme" parent="BaseTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>